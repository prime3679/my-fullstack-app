############################################################
# La Carta Backend Environment Variables
############################################################

# ==========================================================
# Database Configuration
# ==========================================================
DATABASE_URL="postgresql://username:password@localhost:5432/lacarta"
# For test environment
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/lacarta_test"

# ==========================================================
# Server Configuration  
# ==========================================================
NODE_ENV=development  # development | test | production
PORT=3001
FRONTEND_URL="http://localhost:3000"

# ==========================================================
# Security & Authentication
# ==========================================================
# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Session Configuration
SESSION_SECRET="your-session-secret-change-this-in-production"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW="1 minute"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://*.ngrok-free.app,https://*.ngrok.io"

# ==========================================================
# OAuth Configuration
# ==========================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/google/callback"

# Apple OAuth  
APPLE_CLIENT_ID="your.app.bundle.id"
APPLE_TEAM_ID="ABCD123456"
APPLE_KEY_ID="ABC123DEFG"
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Apple private key here\n-----END PRIVATE KEY-----"
APPLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/apple/callback"

# ==========================================================
# Payment Processing
# ==========================================================
# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ==========================================================
# Email Service
# ==========================================================
FROM_EMAIL="La Carta <hello@lacarta.com>"
REPLY_TO_EMAIL="support@lacarta.com"

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""

# Development Email Testing (Ethereal)
ETHEREAL_USER=""
ETHEREAL_PASS=""

# ==========================================================
# POS System Integration
# ==========================================================
# Toast POS
TOAST_API_KEY=""
TOAST_LOCATION_ID=""
TOAST_WEBHOOK_SECRET=""

# Square POS
SQUARE_ACCESS_TOKEN=""
SQUARE_LOCATION_ID=""
SQUARE_WEBHOOK_SIGNATURE_KEY=""

# ==========================================================
# Third-Party Integrations
# ==========================================================
# OpenTable
OPENTABLE_API_KEY=""
OPENTABLE_RESTAURANT_ID=""

# Twilio (SMS)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ==========================================================
# Redis Configuration (for caching & rate limiting)
# ==========================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ==========================================================
# Monitoring & Analytics
# ==========================================================
# Sentry Error Tracking
SENTRY_DSN=""

# Google Analytics
GOOGLE_ANALYTICS_ID=""

# LogRocket
LOGROCKET_APP_ID=""

# ==========================================================
# Feature Flags
# ==========================================================
ENABLE_WEBSOCKETS="true"
ENABLE_AI_RECOMMENDATIONS="false"
ENABLE_LOYALTY_PROGRAM="false"
ENABLE_SMS_NOTIFICATIONS="false"

# ==========================================================
# AI/ML Services
# ==========================================================
OPENAI_API_KEY=""
OPENAI_ORGANIZATION=""

# ==========================================================
# File Storage
# ==========================================================
# AWS S3 (for menu images, receipts)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# ==========================================================
# Logging
# ==========================================================
LOG_LEVEL="info"  # error | warn | info | debug
LOG_FORMAT="json"  # json | pretty