# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@your-neon-host.neon.tech/lacarta?sslmode=require"

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL="https://your-app.vercel.app"

# Stripe (Payment Processing)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."

# JWT & Security
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Email (Optional - for staff invitations)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
SMTP_FROM="noreply@lacarta.com"

# OpenTable Integration (Optional)
OPENTABLE_API_KEY="your-opentable-key"

# Toast POS Integration (Optional)
TOAST_CLIENT_ID="your-toast-client-id"
